<% provide(:title, "Log In") %>
	<h1 class="text-center page-title">log in</h1>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(:session, url: login_path, :html => {:class => 'form-horizontal'}) do |f| %>
				<div class="form-group">  
					<%= f.label :email, class: 'col-sm-2 control-label form-label' %>
					<div class="col-sm-8">  
						<%= f.email_field :email, class: 'form-control form-entry', placeholder: "Your email address" %>
					</div>
				</div>  
  				<div class="form-group">  
					<%= f.label :password, class: 'col-sm-2 control-label form-label' %>
					<div class="col-sm-8">  
						<%= f.password_field :password, class: 'form-control form-entry', placeholder: "Your password" %>
					</div> 
				</div>  
				<div class="form-group">  
					<div class="col-sm-offset-2 col-sm-8 ">  
						<%= f.submit "Log in", class: 'btn btn-default form-button', style: "width: 8em;" %>
					</div>
				</div>  
			<% end %>
		</div>
	</div>
<div class="short-page-footer"></div>
