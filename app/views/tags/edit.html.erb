<% provide(:title, "Edit Tag") %>
<h1 class="text-center">edit tag</h1>
<%= form_for @tag, :html => {:class => 'form-horizontal'} do |f| %>  
  <% if @tag.errors.any? %>  
    <div id="error_explanation" class="error-box">  
      <h3>  
        <%= "#{pluralize(@tag.errors.count, "error")} stopped this Tag from being updated:" %>  
      </h3>  
      <div>
        <ul>  
          <% @tag.errors.full_messages.each do |msg| %>  
            <li><%= msg %></li>  
          <% end %>  
        </ul>
      </div>
    </div>  
  <% end %>  
  <div class="form-group">  
    <%= f.label :name, class: 'col-sm-2 control-label form-label' %>  
    <div class="col-sm-8">  
      <%= f.text_field :name, class: 'form-control form-entry', placeholder: "Tag Name" %>
    </div>  
  </div>  
  <div class="form-group">  
    <div class="col-sm-offset-2 col-sm-8 ">  
      <%= f.submit 'Save', class: 'btn btn-default form-button input-button', style: "width: 8em;" %>  
    </div>  
  </div>  
<% end %> 
<dir class="short-page-footer"></dir>
