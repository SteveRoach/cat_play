<% provide(:title, "Admin") %>
<h1 class="text-center">admin</h1>
<div class="row">	
	<div class="col-xs-12">
		<% if logged_in? %>
			<h2>Maintain Journal Entries</h2>
			<ul class=admin-list>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Create Journal Entry", new_journal_path %>
					</div>
				</li>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Edit Journal Entries", journals_path %>
					</div>

				</li>
			</ul>
			<h2>Maintain Sections</h2>
			<ul class=admin-list>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Create Section", new_section_path %>
					</div>
				</li>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Edit Sections", sections_path %>
					</div>

				</li>
			</ul>
			<h2>Maintain Tags</h2>
			<ul class=admin-list>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Create Tag", new_tag_path %>
					</div>
				</li>
				<li>
					<div class="col-md-10 col-md-offset-1">
						<%= link_to "Edit Tags", tags_path %>
					</div>

				</li>
			</ul>
		<% else %>
			<div class="error-box admin-error">  
				<h3>Only a logged-in administrator can use this screen.</h3>
			</div>  
		<% end %>
	</div>
</div>
